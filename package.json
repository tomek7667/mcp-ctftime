{
	"name": "mcp-ctftime",
	"version": "1.0.1",
	"description": "Model Context Protocol (MCP) server wrapping the public CTFtime API - query CTF events, teams, rankings, and results",
	"type": "module",
	"bin": {
		"mcp-ctftime": "./build/index.js"
	},
	"files": [
		"build",
		"README.md"
	],
	"scripts": {
		"build": "tsc && node -e \"require('fs').chmodSync('build/index.js', 0o755)\"",
		"start": "node build/index.js",
		"watch": "tsc --watch",
		"prepublishOnly": "pnpm run build",
		"typecheck": "tsc --noEmit",
		"lint": "echo 'No linter configured'",
		"test": "echo 'No tests configured' && exit 0"
	},
	"keywords": [
		"mcp",
		"model-context-protocol",
		"ctftime",
		"ctf",
		"capture-the-flag",
		"security",
		"hacking",
		"ai",
		"llm",
		"claude",
		"codex",
		"gemini",
		"amp"
	],
	"author": "",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tomek7667/mcp-ctftime.git"
	},
	"bugs": {
		"url": "https://github.com/tomek7667/mcp-ctftime/issues"
	},
	"homepage": "https://github.com/tomek7667/mcp-ctftime#readme",
	"engines": {
		"node": ">=18.0.0"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.25.1",
		"zod": "^4.3.5"
	},
	"devDependencies": {
		"typescript": "^5.7.2",
		"@types/node": "^25.0.3"
	}
}
