{
  "name": "mcp-ctftime",
  "version": "0.1.0",
  "description": "Model Context Protocol (MCP) server wrapping the public CTFtime API",
  "private": true,
  "type": "module",
  "bin": {
    "mcp-ctftime": "./build/index.js"
  },
  "files": ["build"],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', 0o755)\"",
    "start": "node build/index.js",
    "watch": "tsc --watch"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "typescript": "^5.7.2",
    "@types/node": "^22.10.2"
  }
}
